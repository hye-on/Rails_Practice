<%= form_with(model: banned_word) do |form| %>
  <% if banned_word.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(banned_word.errors.count, "error") %> prohibited this banned_word from being saved:</h2>

      <ul>
        <% banned_word.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :word, style: "display: block" %>
    <%= form.text_field :word %>
  </div>

  <div>
    <%= form.label :policy, style: "display: block" %>
    <%= form.select :policy, options_for_select([['Ban', 'ban'], ['Warn', 'warn']], selected: banned_word.policy), required: true %>
  </div>

  <div>
    <%= form.label :match_target, style: "display: block" %>
    <%= form.select :match_target, options_for_select([['Title Only', 'title_only'], ['Content Only', 'content_only'], ['Both', 'both']], selected: banned_word.match_target), required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
